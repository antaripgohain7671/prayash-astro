---
import BaseLayout from "../layouts/BaseLayout.astro";
import NewsCards from "../components/NewsCards.astro";
import Marquee from "../components/Marquee.astro";
const showMarquee = true; //control if marquee is visible or not
const marqueeItems = [
  { text: "Nothing", link: "/" },
  { text: "Yet", link: "/" },
  { text: "added", link: "/" }
];
---

<BaseLayout title="Home">
  <Marquee showMarquee={showMarquee} marqueeItems={marqueeItems} />
  <!-- Hero Section -->
  <section
    class="relative w-full h-screen flex items-center justify-center bg-cover bg-center"
    style="background-image: url('/pictures/front_close.jpg');"
  >
    <div class="absolute inset-0 bg-black" style="opacity: 0.5;"></div>
    <!-- Semi-transparent overlay -->

    <div
      class="relative z-10 bg-neutral backdrop-blur-md p-10 rounded-lg shadow-lg text-center max-w-2xl"
      style="opacity: 0.95"
    >
      <h1 class="text-5xl font-bold text-base-100 drop-shadow-lg">
        Welcome to Prayash Academy, Golaghat
      </h1>
      <p class="mt-4 text-lg text-base-200">
        A Junior Collage of Arts, Commerce & Scince 
      </p>
      <p class="mt-1 text-normal text-base-200">
        Under AHSEC 
      </p>
      <p class="mt-1 text-normal text-base-200">
        AHSEC/RPR/57/06/9514 
      </p>
      <p class="mt-1 text-sm text-base-200">
        ESTD: 2010 
      </p>
      <a
        href="/about-us"
        class="mt-6 inline-block bg-gradient-to-r from-primary to-accent text-white px-6 py-3 rounded-lg shadow-md hover:scale-105 transition-transform"
      >
        Learn More
      </a>
    </div>
  </section>

  <!-- About Section -->
   <section>

   </section>
  <!-- Latest News Section -->
  <NewsCards />
   <!-- Academic Calander -->

</BaseLayout>
