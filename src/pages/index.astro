---
import { getCollection } from "astro:content";
// import EventsCarousel from '../components/EventsCarousel.astro';
import BaseLayout from "../layouts/BaseLayout.astro";
import Newscards from "../components/Newscards.astro";
const generateSummary = (body: string, wordCount: number = 20): string => {
  if (!body) return ''; // Handle empty input
  return body.split(" ").slice(0, wordCount).join(" ") + "...";
};
const allNews = await getCollection("news");
const sortByDateDescending = <T extends { data: { date: Date | string } }>(
  a: T, 
  b: T
): number => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
};

const newsEntries = allNews
  .filter(({ data }) => new Date(data.date) <= new Date())
  .sort(sortByDateDescending)
  .slice(0, 3);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section
    class="relative bg-[url('/school-hero.jpg')] bg-cover bg-center bg-no-repeat h-[500px] flex items-center justify-center text-center text-white"
  >
    <div class="bg-black bg-opacity-50 p-10 rounded-md">
      <h1 class="text-5xl font-bold">Welcome to Our School</h1>
      <p class="mt-4 text-lg">Empowering students for a brighter future</p>
      <a
        href="/about"
        class="mt-6 inline-block bg-accent text-white px-6 py-3 rounded-lg hover:bg-accent-dark transition"
      >
        Learn More
      </a>
    </div>
</section>
    <!-- About Section -->

    <!-- Latest News Section -->
    <section class="container mx-auto p-6">
      <h1 class="text-2xl font-bold text-center text-primary">Latest News</h1>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
        {newsEntries.map(news => (
          <div class="block p-4 bg-base-100 shadow-md rounded-lg hover:shadow-lg transition">
            <h2 class="text-xl font-bold text-primary">{news.data.title}</h2>
            <p class="text-sm text-gray-500">{new Date(news.data.date).toLocaleDateString()}</p>
            <p class="mt-2 text-base-content">{generateSummary(news.body)}</p>
            <a 
              href={`/news/${news.slug}`} 
              class="mt-4 inline-block bg-primary text-white px-4 py-2 rounded-md hover:bg-secondary transition"
            >
              Read More â†’
            </a>
          </div>
        ))}
      </div>
    </section>
