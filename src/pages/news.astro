---
import { getCollection } from 'astro:content';

const newsArticles = await getCollection('news');

import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Latest News">
  <h1 class="text-3xl font-bold text-primary text-center">Latest News</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
    {newsArticles.map(article => (
      <a href={`/news/${article.id}/`} class="block bg-base-200 p-4 rounded-lg shadow-md hover:bg-base-300 transition">
        <h2 class="text-xl font-bold">{article.data.title}</h2>
        <p class="text-gray-500">{article.data.date} â€¢ {article.data.author}</p>
        <p class="mt-2 text-gray-700">{article.data.description}</p>
      </a>
    ))}
  </div>
</BaseLayout>
